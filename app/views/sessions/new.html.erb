<div class="col-md-6 col-md-offset-3">                                            
  <div class="container sign_up">
    <%= simple_form_for :session, :url => sessions_path, :html => { class: 'form-vertical' } do |f| %>
      <div class="form-group">
        <%= f.input :email, class: "form-control", label: false, placeholder: "Your email", input_html: {class: "form-control"} %>
    </div>
    <div class="form-group">
        <%= f.input :password, label: false, placeholder: "Password", input_html: {class: 'form-control'} %>
    </div>
      <%= f.submit "Log In", class: "btn btn-block btn-danger" %>                
    <% end %>                                                
  </div>
</div>
